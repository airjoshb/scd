- for article in @articles
  %article{style: "margin-bottom: 50px;" }
    %div
      - for tag in article.tags
        %span{ style: "line-height: normal; text-transform: uppercase; font-size: 15px; border: thin #bbb solid; display: inline-block; padding: 5px 8px; color: #bbb; font-family: 'Open Sans';"}
          =tag
    %div{style: "width: 65%; display: inline-block;"}
      %h2{style: "margin-bottom: 5px;"}= link_to article.title, article_path(article), style: "color: inherit; text-decoration: none; font-family: 'Open Sans';"
      %i= article.subhead
      - if article.events.present?
        %small{style: "margin: 5px 0; display: block; font-family: 'Open Sans';"}
          - if article.events.first.start_date > Time.current
            %strong= custom_time_distance(article.events.first.start_date) + "!"
          - else
            = time_ago_in_words(article.events.first.start_date)
            ago
          = article.events.first.start_date.strftime("%A, %b %d")
          @
          = article.events.first.start_date.strftime("%l:%M%P")
          - if article.locations.present?
            at
            = article.locations.first.line_1 + ","
            = article.locations.first.city
            = link_to "map", "http://maps.apple.com/maps?q=#{article.locations.first.latitude},#{article.locations.first.longitude}", :class => "tag-button"
      %small{style: "margin: 5px 0; display: block; font-family: 'Open Sans';"}
        - if article.publish_date.present?
          = time_ago_in_words(article.publish_date)
          ago
        - if article.recommended_users.present?
          • recommended by
          = article.recommended_users.count
          - if article.recommended_users.count > 1
            people •
          - else
            person
    - if article == @articles.first
      = image_tag article.image.hero, style: "max-width: 100%;"
      %p{ style: "font-family: 'Open Sans';"}= Nokogiri::HTML.parse(markdown(article.body)).css('p').first.text
      = link_to 'read',  article, style: "line-height: normal; margin-bottom: 10px; text-transform: uppercase; font-size: 15px; border: thin #bbb solid; display: inline-block; padding: 5px 8px; color: #bbb; text-decoration: none; font-family: 'Open Sans'; "
    - else
      = link_to image_tag(article.image.small, style: "max-width: 100%;"), article
  %hr{style: "display: block; height: 1px; border: 0; border-top: 1px solid #bbb; margin: 2em auto; padding: 0; " }