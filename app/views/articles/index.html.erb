<h1>Listing articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Subhead</th>
      <th>Body</th>
      <th>Slug</th>
      <th>Origin</th>
      <th>Image</th>
      <th>Publish date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.subhead %></td>
        <td><%= article.body %></td>
        <td><%= article.slug %></td>
        <td><%= article.origin %></td>
        <td><%= article.image %></td>
        <td><%= article.publish_date %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

