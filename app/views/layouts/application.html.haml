  %body{:class => "#{controller_name} #{action_name}"}
    / NAVIGATION
    %nav#nav
      .nav-group
        .logo= link_to image_tag("santa-cruz-daily-octopus.png"), santa_cruz_restaurant_week_path
        .nav-group
          .nav-element
            - if @article.present? or params[:tag].present?
              = link_to santa_cruz_restaurant_week_path do
                %i.fa.fa-caret-left
                back to the lineup
        .nav-element
          - if current_user.present?
            = link_to edit_registration_path(current_user) do
              - if current_user.identities.present?
                .nav-icon= image_tag current_user.identities.first.avatar, :class => "circle"
              .nav-text
                - if  current_user.identities.present?
                  = current_user.identities.first.nickname
                - else
                  = current_user.username || current_user.email
            %i.fa.fa-chevron-circle-right
            = link_to "Logout", destroy_user_session_path, method: :delete
          - else
            %p Welcome to our special preview for Santa Cruz Restaurant Week.
            %ol
              %li
                Click the
                %i.fa.fa-star-o
                to add to your personal lineup
              %li
                Click
                %i.fa.fa-envelope-o
                to email your lineup
              %li
                Go eat awesome food!

      .nav-group
        - if current_user.present?
          .nav-title
            Interests
          - for tag in @tags
            .nav-element
              .nav-text= link_to tag, articles_path(:tag => tag.name)
        .center.social
          = link_to "http://twitter.com/santacruzdaily", target: '_blank' do
            %i.fa.fa-twitter.fa-2x.large
          = link_to "http://instagram.com/thesantacruzdaily", target: '_blank' do
            %i.fa.fa-instagram.fa-2x.large
          = link_to "http://facebook.com/santacruzdaily", target: '_blank' do
            %i.fa.fa-facebook.fa-2x.large
      .nav-group.scd
        .nav-title
          Santa Cruz Daily Â©2015
    #container
      .logotype
        = link_to santa_cruz_restaurant_week_path do
          = image_tag("santa-cruz-daily-octopus.png", class: 'mobile' )
          Santa Cruz Daily
        - if controller.action_name == "scrw" or controller.action_name == "show"
          = link_to "" do
            %i.fa.fa-3x.fa-envelope-o
          #modal.lineup-popover
            = render 'lineup_email'


      = yield
