!!!
%html{lang: "en"}
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %title= content_for?(:title) ? yield(:title) : "What's happening in Santa Cruz"
    = favicon_link_tag 'ico/favicon.ico'
    = render 'layouts/favicon'
    %link{href: "http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,700,600,300,800", rel: "stylesheet", type: "text/css"}
    %link{href: "http://fonts.googleapis.com/css?family=Arapey:400italic,400", rel: "stylesheet", type: "text/css"}
    %link{href: "http://fonts.googleapis.com/css?family=Comfortaa", rel: "stylesheet", type: "text/css"}
    %meta{content: "yes", name: "apple-mobile-web-app-capable"}
    %meta{content: "black", name: "apple-mobile-web-app-status-bar-style"}
    %meta{:content => content_for?(:description) ? yield(:description) : "What's Happening in Santa Cruz", :name => "description"}
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = analytics_init if Rails.env.production?
    = csrf_meta_tags
    = yield(:head)
  %body
    / NAVIGATION
    %nav#nav
      .nav-group
        .logo= link_to image_tag("santa-cruz-daily-octopus.png"), root_path
        .nav-element
          - if current_user.present?
            = link_to edit_registration_path(current_user) do
              - if current_user.identities.present?
                .nav-icon= image_tag current_user.identities.first.avatar, :class => "circle"
              .nav-text= current_user.username
            %i.fa.fa-chevron-circle-right
            = link_to "Logout", destroy_user_session_path, method: :delete
          - else
            %i.fa.fa-chevron-circle-right
            = link_to "Login", new_user_session_path
      .nav-group
        - if current_user.present?
          .nav-title
            Interests
          - for tag in @tags
            .nav-element
              .nav-text= link_to tag, articles_path(:tag => tag.name)
      .nav-group
        .nav-title
          Santa Cruz Daily Â©2015
    #container
      .logotype
        Santa Cruz Daily
        - if @article.present? or params[:tag].present?
          .small
            = link_to articles_path do
              %i.fa.fa-caret-left
              lineup


      = yield