%html
  %head
    %link{:href => "http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,700,600,300,800", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "http://fonts.googleapis.com/css?family=Comfortaa", :rel => "stylesheet", :type => "text/css"}
    :css
      .logo { text-align: center;}
      .logo img {width: 100px; }
      .logotype { font-family: 'Comfortaa'; font-size: 1.5em; border-bottom: #bbb thin solid; padding-bottom: 20px; width: 40%; margin: 20px auto; }
      .logotype * {text-align: center; }
      ul { list-decoration: dash; }
      .tag {
        line-height: normal;
        margin-bottom: 10px;
        text-transform: uppercase;
        font-size: 15px;
        border: thin #bbb solid;
        display: inline-block;
        padding: 5px 8px;
        color: #bbb;
      }
      a { color: inherit; text-decoration: none;}
      img { max-width: 100%; }
      h2 { margin-bottom: 5px; }
      .info { margin: 5px 0; display: block;}
      .pull-right {float: right; }
      .content { float: left; width: 65%;}
  %body{:style => "font-family: 'Open Sans'; font-size: 14px; color: #292929; width: 90%; margin: 20px auto;"}
    .logo
      = image_tag('santa-cruz-daily-octopus.png'), path: :full
      .logotype Santa Cruz Daily Lineup


    = yield