%ul
  - for article in @articles
    - unless article.statuses.find_by_status(4)
      %li
        = link_to article_path(article) do
          %i.fa.fa-eye
        = link_to edit_admin_article_path(article) do
          %i.fa.fa-edit
        = article.title
        = article.statuses.first.status
        - if article.statuses.first.published?
          = link_to "delete", change_status_article_path(article, status: "deleted"), remote: true, class: "btn2"
        - elsif article.statuses.first.pending?
          = link_to "approve", change_status_article_path(article, status: "approved"), remote: true, class: "btn2"
          = link_to "decline", change_status_article_path(article, status: "declined"), remote: true, class: "btn2"

          = link_to "delete", change_status_article_path(article, status: "deleted"), remote: true, class: "btn2"
        - elsif article.statuses.first.declined?
          = link_to "approve", change_status_article_path(article, status: "approved"), remote: true, class: "btn2"
          = link_to "delete", change_status_article_path(article, status: "deleted"), remote: true, class: "btn2"
        - elsif article.statuses.first.approved?
          = link_to "publish", change_status_article_path(article, status: "published"), remote: true, class: "btn2"
          = link_to "delete", change_status_article_path(article, status: "deleted"), remote: true, class: "btn2"