%h1 Dashboard
%h2 Articles
#articles
  = render 'articles'
  = link_to "Show deleted articles", "", remote: true, class: "btn3"
  #deleted_articles


%h2 Users
%ul
  - for user in @users
    %li
      = link_to edit_user_registration_path(user) do
        %i.fa.fa-edit
      = user.email
      = user.role
      = link_to "delete", user_path(user), method: :delete, remote: true, class: "btn"

:javascript
  $(document).on('ajax:success', '.btn', function(status, data, xhr) {
    $(this).parents('li').fadeOut();
    return false;

  });